    <!--creates directories if they don't already exist -->
    <target name="init">
    </target>

    <target name="checkos" depends="init">
        <condition property="isWindows" value="true">
            <os family="windows" />
        </condition>
        <condition property="isWindows" value="false">
            <os family="unix" />
        </condition>
    </target>

